{% block main %}

  <main class="main">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">Home</li>
      <li class="breadcrumb-item active">Dashboard</li>
      <li class="breadcrumb-item active">Flickr API Photos</li>
      <li class="breadcrumb-menu d-md-down-none">
        <div class="btn-group" role="group" aria-label="Button group">
          <a class="btn" href="{{ path('homepage') }}">
            <i class="fa fa-home"></i>
            &nbsp;Dashboard</a>
          <a class="btn" href="{{ path('dh_settings_index') }}">
            <i class="fa fa-cogs"></i>
            &nbsp;Settings</a>
        </div>
      </li>
    </ol>
    <div class="container-fluid">
      <div id="ui-view">
        <div>
          <div class="animated fadeIn">
            <div class="row">
              {% for photo in photos %}
                <div class="col-lg-6 col-md-4 col-xs-6 thumb">
                  <a class="thumbnail" href="{{photo.fullURL}}">
                    <img src="{{photo.fullURL}}" alt="" class="img-responsive" title="{{photo.title}}" >
                  </a>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

{% endblock %}
