{% trans_default_domain 'FOSUserBundle' %}

<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

{% block stylesheets %}
  {% stylesheets '@DhMainBundle/Resources/public/css/login/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% if error %}
    <div class="col-lg-12">
         <div class="alert alert-warning alert-dismissable">
             <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
             <i class="fa fa-info-circle"></i>  <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
         </div>
     </div>
   </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="col-lg-12">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

      <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png">
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username" />
      					<input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Password" />
                <!-- Disable remember me <div id="remember" class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">Remember me</label>
                </div>
                -->
                <input type="submit" class="btn btn-signin" id="_submit" name="_submit" value="Login" />
                <!-- Disable register button -->
                <!-- <button class="btn btn-signin" type="button"><a class="btn btn-signin" href="{# { path('fos_user_registration_register') }#}">Register</a></button> -->
            </form><!-- /form -->
            <!-- Disable forgot password -->
            <!--
            <a href="#" class="forgot-password">
                Forgot your password?
            </a>
          -->
        </div><!-- /card-container -->

    </div>
</form>
